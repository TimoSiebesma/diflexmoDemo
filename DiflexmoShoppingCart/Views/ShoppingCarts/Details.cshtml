@model DiflexmoShoppingCart.DTO.ShoppingCartOutputDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Shopping Cart Details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AmountOfItems)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountOfItems)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

    <h4 class="mt-4">Products</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductShoppingCarts)
            {
                <tr>
                    <th>
                        @item.Product.Name
                    </th>
                    <th>
                        @(item.Product.Price * item.Amount)
                    </th>
                    <th>
                        @item.Amount
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to Shopping Carts</a>
</div>
